<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:nodes="clr-namespace:GlobalActions.GUI.NodeSystem.Nodes"
             xmlns:c="clr-namespace:GlobalActions.GUI.Components"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GlobalActions.GUI.NodeSystem.Nodes.MouseNode">

    <Design.DataContext>
        <nodes:MouseNodeViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="*,*,*">
        <c:NamedField Grid.Row="0"
                      LabelWidth="100"
                      Label="Delay before">
            <NumericUpDown Minimum="0"
                           Width="150"
                           Text="{Binding DelayBefore}" />
        </c:NamedField>

        <c:NamedField Grid.Row="1"
                      Label="Delay after">
            <NumericUpDown Minimum="0"
                           Width="150"
                           Text="{Binding DelayAfter}" />
        </c:NamedField>

        <c:NamedField Grid.Row="2"
                      Label="HotKey">
            <ComboBox Items="{Binding AvailableKeys}"
                      Width="150"
                      SelectedItem="{Binding Key}" />
        </c:NamedField>
    </Grid>
</UserControl>